{
  "manifest_version": 3,
  "name": "Ghib-linkedin",
  "version": "1.0",
  "description": "Transform linkedin into a Ghibli-inspired aesthetic",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Toggle Ghibli Style"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["ghibli-style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
